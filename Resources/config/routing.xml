<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="exozet_oauth2_login_homepage" path="/">
        <default key="_controller">ExozetOauth2LoginBundle:Default:index</default>
    </route>
    <route id="hwi_oauth_redirect" path="/connect">
        <default key="resource">@HWIOAuthBundle/Resources/config/routing/redirect.xml</default>
    </route>
    <route id="hwi_oauth_connect" path="/connect">
        <default key="resource">@HWIOAuthBundle/Resources/config/routing/connect.xml</default>
    </route>
    <route id="hwi_oauth_login" path="/login">
        <default key="resource">@HWIOAuthBundle/Resources/config/routing/login.xml</default>
    </route>
    <route id="exozet_oauth_logout" path="/">
        <default key="_controller">ExozetOauth2LoginBundle:Security:logout</default>
    </route>
</routes>
