<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="exozet.oauth2.user.provider" class="Exozet\Oauth2LoginBundle\User\UserProvider">
        </service>

        <service id="exozet.google.client" class="Google_Client">
        </service>

        <service id="exozet.google.authorization" class="Exozet\Oauth2LoginBundle\Authorization\Google">
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="exozet.google.client" />
        </service>

        <service id="exozet.oauth.twig.render_button_extension"
                 class="Exozet\Oauth2LoginBundle\Twig\RenderButtonExtension"
                 public="false">
            <tag name="twig.extension" />
        </service>
    </services>
</container>
