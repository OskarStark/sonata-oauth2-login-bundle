<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="exozet.checker.email" class="Exozet\Oauth2LoginBundle\Checker\Email">
            <argument type="collection" id="exozet.valid_email_domains" />
        </service>

        <service id="exozet.oauth2.user.provider" class="Exozet\Oauth2LoginBundle\User\UserProvider">
            <argument type="service" id="sonata.user.orm.user_manager" />
            <argument type="service" id="exozet.checker.email" />
            <argument type="service" id="exozet.google.authorization" />
        </service>

        <service id="exozet.google.client" class="Google_Client">
        </service>

        <service id="exozet.oauth.twig.render_button_extension"
                 class="Exozet\Oauth2LoginBundle\Twig\RenderButtonExtension"
                 public="false">
            <tag name="twig.extension" />
        </service>

        <service id="exozet.google.authorization" class="Exozet\Oauth2LoginBundle\Google\Authorization">
            <argument type="service" id="exozet.google.client" />
        </service>
    </services>
</container>
